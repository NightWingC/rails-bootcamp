<%= form_with model:@course do |f| %>
    <div>
        <%= f.label "Title"%>
        <%= f.text_field :title %>
    </div>
    <div>
        <%= f.label "Description"%>
        <%= f.text_area :description, placeholder: "Describe el curso" %>
    </div>
    <div>
        <%= f.label "Visible"%>
        <%= f.check_box :visible %>
    </div>
    <div>
        <%= f.label "published"%>
        <%= f.check_box :published %>
    </div>
    <div>
        <%= f.submit "Crear curso"%>
    </div>
<% end %>